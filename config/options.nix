{
globalOpts = {
    # Line numbers
    number = true;
    relativenumber = true;
    scrolloff = 8;

    # Tabs & Indentation
    tabstop = 2;
    shiftwidth = 2;
    expandtab = true;
    autoindent = true;

    # Wrapping & UI
    wrap = false;
    cursorline = true;
    termguicolors = true;
    background = "dark";
    signcolumn = "yes";

    # Search settings
    ignorecase = true;
    smartcase = true;

    # Behavior
    backspace = "indent,eol,start";
    clipboard = "unnamedplus";
    splitright = true;
    splitbelow = true;
    swapfile = false;
  };
}
